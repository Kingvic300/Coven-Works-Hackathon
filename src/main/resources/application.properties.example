spring.application.name=Checker
spring.data.mongodb.uri=mongodb://localhost:27017/checker
spring.data.mongodb.database=checker
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=your-email@gmail.com
spring.mail.password=your-app-password
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
spring.thymeleaf.check-template-location=false
spring.mail.properties.mail.smtp.writetimeout=30000
spring.mail.from=your-email@gmail.com
RESET_JWT_SECRET=your-jwt-secret-key
RESET_JWT_EXPIRATION=120000
spring.security.oauth2.client.registration.google.client-id=your-google-client-id
spring.security.oauth2.client.registration.google.client-secret=your-google-client-secret
spring.security.oauth2.client.registration.google.redirect-uri=http://localhost:8080/login/oauth2/code/google
spring.security.oauth2.client.registration.google.scope=openid,email,profile
virustotal.api.key=your-virustotal-api-key
virustotal.poll.delay=5000
logging.level.org.springframework.security=DEBUG
spring.ai.openai.api-key=your-openai-api-key
spam.detection.enabled=true
spam.detection.spam-threshold=0.6
spam.detection.high-risk-threshold=0.8
spam.detection.max-spam-keywords=3
spam.detection.max-spam-patterns=2
spam.detection.max-bulk-emails=100
spam.detection.logging-enabled=true
spam.detection.block-high-risk-emails=true 